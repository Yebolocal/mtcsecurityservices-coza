/* Header Section */
/* <><><><><><><><><><><><><><><><><> */
/* <><><><><><><><><><><><><><><><><> */

#header-section
    padding 0px
    margin 0px
    background yellow
    background-image url('/img/header-bottom.jpg')
    background-position bottom
    background-repeat repeat-x

#header-section-inner
    min-height 200px

#nav-wrapper
    padding 0px
    margin 0px
    span(3/4)
    +below(bp)
      stack()

#logo-wrapper
    span(1/4)
    +below(bp)
      stack()

#logo-header
    z-index: 1;
    overflow visible
    position: fixed;
    left: 85%;
    img
        height 200px

#logo-header-text
    margin-right 20%
    margin-left 60%
    padding-top 10px
    padding-bottom 10px
    padding-left 70px
    padding-right 10px
    background grey
    border-color black
    border-style: solid;
    border-width: 5px;
    border-radius: 10px
    font-size 1em
    +below(bp)
        margin-right auto
        margin-left auto
    a
      text-decoration none
      color yellow
    a:hover
      color red


#header-nav
    background #505050
    height 45px
    margin-bottom 20px
    ul
        margin 0px
        padding 0px
        list-style-type: none;
        margin-bottom 0px

.nav-item
    span(1/4 3/4)
    +below(400px)
      stack()
      background yellow
      border solid #505050
      background-image none

    position relative
    height 45px
    padding-bottom 15px !important
    text-align center
    background-image url('/img/nav-bottom.jpg')
    background-position bottom
    background-repeat repeat-x
    a
        text-decoration none
        height 45px
        border-left 1px solid grey-light
        padding-top 11px
        span(1/1)
        font-size 0.8em
        color white
        font-family font1
        +below(400px)
            color black

.nav-item:hover
    background white
    a
        color black




