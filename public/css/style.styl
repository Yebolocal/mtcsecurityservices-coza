@import 'nib'
@import 'jeet'
@import 'rupture'

// Set the Breakpoints
bp = 960px

// Set the Colors
grey = #505050
grey-light = #9db2b8
red = #B81B20
yellow = #FFE01A
pink = #ed2a7a
purple = #662c91

// Set the fonts later use // font-family font1

font1 = 'Jura', sans-serif;
font2 = 'Cinzel', serif;

// The global styles

html
 font-size: 1.6em
 color: grey
 font-family font1

body
  background: black
  padding 0px
  margin 0px
a
  color: #00B7FF

a:hover
color purple


.f1
    font-family font1
.f2
    font-family font2
.f3
    font-family font3



/* <><><><><><><><><><><><><><><><><> */
/* <><><><><><><><><><><><><><><><><> */
/* Layout Tools  */
/* <><><><><><><><><><><><><><><><><> */
/* <><><><><><><><><><><><><><><><><> */


// the container is used to center the content on the page. If you dont want the content to be centered dont use a container
.container
  center(bp)

// Use rows to wrap around columns and spans
.row
  width 100%
  cf()

// Use col inners if you want to add padding, margins and borders to columns and span without breaking the proportions

col-inner {
    padding 10px
    border-radius: 1px
}


// Section to group the content of the page

.section
    padding-top 100px
    padding-bottom 100px

// Buttons

.btn
  padding-top 15px
  padding-bottom 15px
  padding-left 30px
  padding-right 30px
  // background white
  border-radius: 10px
  font-size 2em
  width 30%
  a
      text-decoration none
      color white
  a:hover
      color purple

.square-list
  list-style-type: square;

.resposive-image
  max-width 100%

